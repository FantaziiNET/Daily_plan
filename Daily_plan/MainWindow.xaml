<Window x:Class="Daily_plan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Daily_plan"
        mc:Ignorable="d"
        
        MinHeight="425" MinWidth="650" MaxHeight="900" MaxWidth="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        
        <FontFamily x:Key="CustomFont">#AdventureIndianaJones</FontFamily>

        <SolidColorBrush x:Key="MainColor" Color="#a1a1f1"/>
        <SolidColorBrush x:Key="TextNewTaskColor" Color="#eeeeee"/>

        <Style x:Key="NewTaskTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Width" Value="210"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
        <Style x:Key="NewTaskTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="210"/>
            <Setter Property="Background" Value="{StaticResource TextNewTaskColor}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
        <Style x:Key="NewTaskButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="210"/>
            <Setter Property="Background" Value="{StaticResource TextNewTaskColor}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TextBlock x:Name="NowDateTextBlock" FontFamily="{StaticResource CustomFont}"
                   Margin="10,10,0,0" FontSize="32" FontWeight="DemiBold" Foreground="#a1c1f1"
                   VerticalAlignment="Top" HorizontalAlignment="Left" TextWrapping="Wrap"
        />
        <TextBlock Text="Ваш план на сегодня:" FontFamily="{StaticResource CustomFont}"
                   Margin="10,55,0,0" FontSize="32" FontWeight="DemiBold" Foreground="#a1c1f1"
                   VerticalAlignment="Top" HorizontalAlignment="Left" TextWrapping="Wrap"
        />
        <ListBox x:Name="TaskListBox" Margin="10,100,0,0"
                 VerticalAlignment="Top" HorizontalAlignment="Left">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding}" FontFamily="{StaticResource CustomFont}"
                   FontSize="26" FontWeight="DemiBold" Foreground="{StaticResource MainColor}"
                   VerticalAlignment="Top" HorizontalAlignment="Left" Checked="TaskCheckBox_Checked"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!--<TextBlock x:Name="PlanTextBlock" FontFamily="{StaticResource CustomFont}"
                   Margin="10,100,0,0" FontSize="26" FontWeight="DemiBold" Foreground="{StaticResource MainColor}"
                   VerticalAlignment="Top" HorizontalAlignment="Left" TextWrapping="Wrap"
        />-->

        <Border x:Name="NewTask" CornerRadius="20" Height="55" Width="200" Background="#999999"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                MouseLeftButtonDown="NewTask_MouseLeftButtonDown" Margin="0,0,10,10">
            <Label Content="Добавить дело" FontSize="26" FontFamily="{StaticResource CustomFont}"
                   Foreground="#0fff9f"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <StackPanel x:Name="NewTaskStackPanel" Height="250" Width="280" Background="White"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Visibility="Collapsed">
            <TextBlock Text="Название задачи:" Style="{StaticResource NewTaskTextBlockStyle}"/>
            <TextBox x:Name="TaskNameTextBox" Style="{StaticResource NewTaskTextBoxStyle}"/>
            <TextBlock Text="Повторение через(дней):" Style="{StaticResource NewTaskTextBlockStyle}"/>
            <TextBox  Style="{StaticResource NewTaskTextBoxStyle}"/>
            <Button x:Name="SaveTaskButton" Content="Сохранить" Style="{StaticResource NewTaskButtonStyle}"
                    Click="SaveTaskButton_Click" Width="150"/>
        </StackPanel>
    </Grid>
</Window>
